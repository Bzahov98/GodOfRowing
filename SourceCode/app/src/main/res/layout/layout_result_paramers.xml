<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="55dip"
    android:background="#000"
    android:orientation="vertical"
    android:id="@+id/res_param_layout">

    <ImageView
        android:id="@+id/list_item_head_header"
        android:tint="#f9f6f6"
        android:foregroundTint="#f9f6f6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:src="@drawable/icon_settings"
        />

    <TextView
        android:id="@+id/res_layout_parameter_name"
        android:text="not loaded"
        android:layout_toRightOf="@id/list_item_head_header"
        android:layout_width="wrap_content"
        android:gravity="left"
        android:paddingTop="10dp"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/list_item_head_text_workout"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="24dp"
        android:layout_height="wrap_content"
        android:text="@string/notFinished"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:id="@+id/res_layout_parameter_image_end"
        android:tint="#f9f6f6"
        android:foregroundTint="#f9f6f6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        />

</RelativeLayout>