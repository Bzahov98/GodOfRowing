<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    tools:context="com.bzahov.elsys.godofrowing.MainActivity"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/main_param_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:background="#000">
        <!-- Row 1 -->
        <TableRow
            android:id="@+id/main_table_row_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:weightSum="2">
            >

            <TextView
            android:id="@+id/main_table_param_meters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
                android:gravity="center"
            android:padding="18dp"
            android:text="Row 1\nColumn 1"
            android:textColor="#fff" />

            <TextView
                android:id="@+id/main_table_param_StrokePerMinute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="0 \nSPM"
                android:textColor="#fff" />
        </TableRow>
        <!-- Row 2 -->
        <TableRow
            android:id="@+id/main_table_row_2"
            android:layout_width="match_parent"
            android:background="#000"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/main_table_Param_speed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="32dp"
                android:text="0.00\n km/h"
                android:textColor="#fff"
                />

            <TextView
                android:id="@+id/main_table_Param_speed_accel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="32dp"
                android:text="Row 2\nColumn 2"
                android:textColor="#fff" />

            <TextView android:id="@+id/main_table_Ave_Speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="32dp"
                android:text="0.0\nave Speed"
                android:textColor="#fff" />
        </TableRow>

        <!-- Row 3 -->
        <TableRow
            android:id="@+id/main_table_row_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:weightSum="2"
            >

            <TextView
                android:id="@+id/Row3_C_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Row 3\n Columjn 1"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/Row3_C_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:text="Row 3\nColumn 2"
                android:textColor="#fff" />

        </TableRow>

        <!-- Row 4 -->
        <TableRow
            android:id="@+id/row_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/Row4_C_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:text="Row 4\nColumn 1"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/Row4_C_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:text="Row 4\nColumn 2"
                android:textColor="#fff" />
            <TextView
                android:id="@+id/Row4_C_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:text="Row 4\nColumn 3"
                android:textColor="#fff" />

        </TableRow>

    </TableLayout>

    <HorizontalScrollView
        android:id="@+id/main_HScrow_View"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:layout_weight="0.4">
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F21">

        <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/details_mapView">

        </com.google.android.gms.maps.MapView>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/LineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

        </com.github.mikephil.charting.charts.LineChart>
        <TextView
            android:id="@+id/first_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text=""
            />
        <TextView
            android:id="@+id/second_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/third_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:layout_alignParentEnd="true"
            android:gravity="center"
            />
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:translationZ="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/mapController">

            <TextView

                android:id="@+id/mapControllerStart"
                android:text="Start Activity"
                android:onClick="StartPauseActivity"
                android:background="#494"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
